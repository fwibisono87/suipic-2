# Suipic Environment Variables

# App
NODE_ENV=development
PORT=3000

# Backend
API_PORT=4000
DATABASE_URL=postgresql://suipic:suipic@localhost:5432/suipic?schema=public

# Database (Postgres)
POSTGRES_USER=suipic
POSTGRES_PASSWORD=suipic
POSTGRES_DB=suipic

# Object Storage (MinIO)
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_BUCKET=suipic

# Identity & Access Management (Keycloak)
KC_BOOTSTRAP_ADMIN_USERNAME=admin
KC_BOOTSTRAP_ADMIN_PASSWORD=admin
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=suipic
KEYCLOAK_CLIENT_ID=suipic-web
KEYCLOAK_CLIENT_SECRET=change-me
